---
whiskers:
  version: 2.5.1
  matrix:
    - flavor
  filename: "css/jekyll-pygments-{{flavor.identifier}}.css"
---

/* ==================================================================== */
/* Catppuccin {{ flavor.name }} Syntax Highlighting for Jekyll-Pygments */
/* ==================================================================== */

{% set c = flavor.colors %}

/* Base and highlights */
.highlight .hll {
    background-color: #{{ c.base.hex }};
}

.highlight .c {
    color: #{{ c.overlay2.hex }};
    font-style: italic;
} /* Comment */

.highlight .err {
    color: #{{ c.red.hex }};
    background-color: #{{ c.peach.hex }};
} /* Error */

.highlight .k {
    color: #{{ c.mauve.hex }};
    font-weight: bold;
} /* Keyword */

.highlight .o {
    color: #{{ c.sky.hex }};
    font-weight: bold;
} /* Operator */

.highlight .cm {
    color: #{{ c.overlay2.hex }};
    font-style: italic;
} /* Comment.Multiline */

.highlight .cp {
    color: #{{ c.mauve.hex }};
    font-weight: bold;
    font-style: italic;
} /* Comment.Preproc */

.highlight .c1 {
    color: #{{ c.overlay2.hex }};
    font-style: italic;
} /* Comment.Single */

.highlight .cs {
    color: #{{ c.mauve.hex }};
    font-weight: bold;
    font-style: italic;
} /* Comment.Special */

.highlight .gd {
    color: #{{ c.red.hex }};
    background-color: rgba({{ c.red.rgb.r }}, {{ c.red.rgb.g }}, {{ c.red.rgb.b }}, 0.15);
} /* Generic.Deleted */

.highlight .ge {
    color: #{{ c.subtext0.hex }};
    font-style: italic;
} /* Generic.Emph */

.highlight .gr {
    color: #{{ c.red.hex }};
} /* Generic.Error */

.highlight .gh {
    color: #{{ c.subtext0.hex }};
} /* Generic.Heading */

.highlight .gi {
    color: #{{ c.green.hex }};
    background-color: rgba({{ c.green.rgb.r }}, {{ c.green.rgb.g }}, {{ c.green.rgb.b }}, 0.15);
} /* Generic.Inserted */

.highlight .go {
    color: #{{ c.subtext1.hex }};
} /* Generic.Output */

.highlight .gp {
    color: #{{ c.subtext0.hex }};
} /* Generic.Prompt */

.highlight .gs {
    font-weight: bold;
} /* Generic.Strong */

.highlight .gu {
    color: #{{ c.subtext0.hex }};
} /* Generic.Subheading */

.highlight .gt {
    color: #{{ c.red.hex }};
} /* Generic.Traceback */

.highlight .kc,
.highlight .kd,
.highlight .kn,
.highlight .kp,
.highlight .kr {
    color: #{{ c.mauve.hex }};
    font-weight: bold;
} /* Keyword Constant/Declaration/Namespace/Pseudo/Reserved */

.highlight .kt {
    color: #{{ c.yellow.hex }};
    font-weight: bold;
} /* Keyword.Type */

.highlight .m,
.highlight .mf,
.highlight .mh,
.highlight .mi,
.highlight .mo {
    color: #{{ c.peach.hex }};
} /* Literal.Number */

.highlight .s,
.highlight .sb,
.highlight .sc,
.highlight .sd,
.highlight .s2,
.highlight .se,
.highlight .sh,
.highlight .si,
.highlight .sx,
.highlight .s1 {
    color: #{{ c.green.hex }};
} /* Literal.String variants */

.highlight .sr {
    color: #{{ c.teal.hex }};
} /* Literal.String.Regex */

.highlight .ss {
    color: #{{ c.pink.hex }};
} /* Literal.String.Symbol */

.highlight .na,
.highlight .nv,
.highlight .vc,
.highlight .vg,
.highlight .vi {
    color: #{{ c.blue.hex }};
} /* Name/Variable variants */

.highlight .nb {
    color: #{{ c.red.hex }};
} /* Name.Builtin */

.highlight .nc {
    color: #{{ c.yellow.hex }};
    font-weight: bold;
} /* Name.Class */

.highlight .no {
    color: #{{ c.green.hex }};
} /* Name.Constant */

.highlight .nd {
    color: #{{ c.mauve.hex }};
    font-weight: bold;
} /* Name.Decorator */

.highlight .ni {
    color: #{{ c.peach.hex }};
} /* Name.Entity */

.highlight .ne,
.highlight .nf,
.highlight .nl {
    color: #{{ c.red.hex }};
    font-weight: bold;
} /* Name.Exception/Function/Label */

.highlight .nn {
    color: #{{ c.subtext0.hex }};
} /* Name.Namespace */

.highlight .nt {
    color: #{{ c.blue.hex }};
} /* Name.Tag */

.highlight .ow {
    color: #{{ c.sky.hex }};
    font-weight: bold;
} /* Operator.Word */

.highlight .w {
    color: #{{ c.subtext1.hex }};
} /* Text.Whitespace */

.highlight .il {
    color: #{{ c.peach.hex }};
} /* Literal.Number.Integer.Long */
